
<div class="sign-up">

				<div class="alert-continue"><%=notice%> <%=alert%><br><br></div>

					<p class="title">Log in</p><br>

              <%= form_for(:user, :url => session_path(:user)) do |f| %>
					<input type="email" name="user[email]"  class="inputs" placeholder="e-mail">
					<input type="password" name="user[password]" class="inputs" placeholder="password">
					<br>
					<br>
					<span class="subtitle"><input class="checkbox" type="checkbox" name="user_remember_me" value="1">Remember me</span>
